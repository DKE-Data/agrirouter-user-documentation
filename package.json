{
  "name": "agrirouter-user-documentation",
  "version": "1.0.0",
  "repository": "https://github.com/DKE-Data/agrirouter-user-documentation.git",
  "author": "Oliver Rahner <o.rahner@dke-data.com>",
  "license": "Apache-2.0",
  "scripts": {
    "validate-xrefs": "antora --generator @antora/xref-validator ./antora-playbook.yml",
    "translate": "po4a po4a.conf",
    "build-all": "for LNG in de en fr it ru; do cd $LNG; ../node_modules/.bin/antora generate antora-playbook.yml --to-dir ../build/$LNG; cd ..; done",
    "build": "DOCSEARCH_ENABLED=true DOCSEARCH_ENGINE=lunr $(npm bin)/antora --generator antora-site-generator-lunr ./antora-playbook.yml",
    "build-nosearch": "$(npm bin)/antora --generator antora-site-generator-lunr ./antora-playbook.yml",
    "generate-images": "node scripts/generate_images.js"
  },
  "dependencies": {
    "@antora/cli": "^2.3.4",
    "@antora/site-generator-default": "^2.3.4",
    "@antora/xref-validator": "https://gitlab.com/antora/xref-validator#main",
    "antora-site-generator-lunr": "^0.6.1",
    "asciidoctor-kroki": "^0.14.0"
  }
}
